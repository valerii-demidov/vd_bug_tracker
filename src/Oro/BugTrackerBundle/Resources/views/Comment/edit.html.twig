{{ form_start(form) }}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">{{ 'Edit comment'|trans }}</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-3">{{ 'Autohor'|trans }}</div>
        <div class="col-8">{{ entity.customer.username }}</div>
    </div>
    <div class="row">
        <div class="col-3">{{ 'Created'|trans }}</div>
        <div class="col-8">{{ entity.created|date("m/d/Y g:ia") }}</div>
    </div>
    <div class="form-group row">
        {{ form_label(form.body, null, {'label_attr': {'class': 'col-2 col-form-label'}}) }}
        {{ form_errors(form.body) }}
        <div class="col-12 col-height">
            {{ form_widget(form.body,{'attr': {'class': 'form-control input-lg', 'rows': 4, 'cols': 50 }}) }}
        </div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Close'|trans }}</button>
    {{ form_row(form.submit, { 'attr': { 'class': 'btn btn-primary' } }) }}
</div>
{{ form_end(form) }}

