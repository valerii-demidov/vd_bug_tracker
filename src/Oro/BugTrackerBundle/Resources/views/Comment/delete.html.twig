
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title" id="myModalLabel">{{ 'Delete comment'|trans }}</h4>
</div>
<div class="modal-body">
    <div class="row">
        <div class="col-12 pb-2">
            {{ 'Are you sure you want to delete this comment?'|trans }}
        </div>
    </div>
    <div class="row">
        <div class="col-3">{{ 'Autohor'|trans }}</div>
        <div class="col-8">{{ entity.customer.username }}</div>
    </div>
    <div class="row">
        <div class="col-3">{{ 'Created'|trans }}</div>
        <div class="col-8">{{ entity.created|date("m/d/Y g:ia") }}</div>
    </div>
    <div class="row pt-2 pb-2">
        <div class="col-3">{{ 'Body'|trans }}</div>
        <div class="col-8">{{ entity.body }}</div>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default" data-dismiss="modal">{{ 'Close'|trans }}</button>
    {{ form(form) }}
</div>


