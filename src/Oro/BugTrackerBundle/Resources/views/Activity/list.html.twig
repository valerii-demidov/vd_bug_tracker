{% import 'BugTrackerBundle::macros.html.twig' as macros %}
{% set entity_paginator = paginator_object_by_qb(collection, paginator_var) %}
{% if entity_paginator.count > 0 %}
    <div class="panel panel-default mt-3 panel-bold">
        <!-- Default panel contents -->
        <div class="panel-heading p-2">
            {{ 'Activities'|trans }}
        </div>
        <div class="panel-body p-2">
            <div class="activity-list">
                <div class="row">
                    {% for activity in entity_paginator.entity_collection %}
                        <div class="col-11 pt-1 pb-2">
                            <div class="block activity-list-item pl-4">
                                {% set activityTemplate = activity_template_detect(activity) %}
                                {{ include(activityTemplate, {activity: activity}) }}
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="text-center">
            {{ macros.renderPaginator(app.request.attributes.get('_route'), entity_paginator.max_pages, paginator_var) }}
        </div>
    </div>
{% endif %}
