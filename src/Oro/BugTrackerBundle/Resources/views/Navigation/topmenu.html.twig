{# src/Oro/BugTrackerBundle/Resources/views/topmenu.html.twig #}

{% block html %}
    {% block navigation %}
        <div class="container-fluid navbar navbar-toggleable-md navbar-inverse bg-inverse">
            <div class="row col d-flex navbar-collapse collapse">
                <div class="mr-auto">
                    <ul class="nav navbar-nav">
                        <li class="nav-item active">
                            <a class="nav-link"
                               href="{{ url('bug_tracker_homepage') }}">{{ 'Home'|trans }} <span
                                        class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               href="{{ url('oro_bugtracker_project_list') }}">{{ 'Projects'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link"
                               href="{{ url('oro_bugtracker_issue_list') }}">{{ 'Issues'|trans }}</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="http://example.com"
                               id="navbarDropdownMenuLink"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Customers
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <a class="dropdown-item" href="{{ url('oro_bugtracker_customer_list') }}">{{ 'Manage
                                    Customers'|trans }}</a>
                                <a class="dropdown-item" href="#">{{ 'Something else here'|trans }}</a>
                            </div>
                        </li>
                    </ul>
                </div>
                {% if app.user.id is defined %}
                    <div class="p-2">
                        <ul class="nav navbar-nav navbar-right">
                            <li class="dropdown"><a href="#" class="dropdown-toggle"
                                                    data-toggle="dropdown">{{ 'Account'|trans }}
                                    <b class="caret"></b></a>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li>
                                        <div class="navbar-content">
                                            <div class="row">
                                                <div class="col-md-5">
                                                    <p>
                                                        <img src="http://placehold.it/120x120"
                                                             alt="Alternate Text" class="img-responsive"/>
                                                    </p>
                                                </div>
                                                <div class="col-md-7">
                                                    <span>{{ app.user.fullName }}</span>
                                                    <p class="text-muted small">
                                                        {{ app.user.email }}
                                                    </p>
                                                    <div class="divider">
                                                    </div>
                                                    <a href="{{ url('oro_bugtracker_customer_edit', { 'id': app.user.id } ) }}"
                                                       class="btn btn-primary btn-sm active">
                                                        {{ 'View Profile'|trans }}
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="navbar-footer">
                                            <div class="navbar-footer-content">
                                                <div class="text-right">
                                                    <a href="{{ url('oro_bugtracker_auth_logout') }}"
                                                       class="btn btn-default btn-sm pull-right">{{ 'Sign Out'|trans }}</a>
                                                </div>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </div>
    {% endblock %}
{% endblock %}



