{# src/Oro/BugTrackerBundle/Resources/views/issue/list.html.twig #}
{% extends 'BugTrackerBundle::base.html.twig' %}
{% import 'BugTrackerBundle::macros.html.twig' as macros %}

{% block page_header_content %}
    {{ parent() }}
    <div class="p-2">
        <a class="btn btn-primary" href="{{ url(entity_create_router) }}"
           role="button">{{ 'Create Issue'|trans }}</a>
    </div>
{% endblock %}

{% block content %}
    <div id="issue-list">
        {% set entity_paginator = paginator_object_by_qb(entity_collection, paginator_var) %}
        {{ macros.renderGrid(entity_paginator.entity_collection, columns, actions) }}
        <div class="text-center">
            {{ macros.renderPaginator(app.request.attributes.get('_route'), entity_paginator.max_pages, paginator_var) }}
        </div>
    </div>
{% endblock %}


